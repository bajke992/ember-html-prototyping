<section class="sidebar" id="sidebar">

    <div class="canvasToggle">
        <button {{bind-attr class="editDesign:active"}}{{action "setDesignView" on="click"}}>Design View</button>
        <button {{bind-attr class="editCode:active"}}{{action "setCodeView" on="click"}}>Code View</button>
    </div>

    <aside>
        <header class="label-title">Element Inspector</header>
        {{ property-inspector
        elemid=elementId
        width=width
        height=height
        x_pos=x_pos
        y_pos=y_pos
        }}
    </aside>

    <aside>
        <header class="label-title">Project Tree <span class="add-screen fa fa-plus-square-o" {{action addScreen}}></span></header>

        {{ project-tree screens=model.screens }}

    </aside>

    {{screen-modal edit=edit screenTitle=screenTitle}}

</section>
<!-- # .sidebar -->

<div class="workspace" id="workspace">

    <div class="canvas-workspace">
        {{outlet}}
    </div>

</div>
<!-- # .workspace -->
